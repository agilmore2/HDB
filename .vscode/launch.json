    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            //"args": "-a ~/.app_user_login_service -n 2 -e 2025-09-15 -l d -d",
            "envFile": "/home/agilmore/workspace/HDB/bashrc_hdb_app_local",
            "justMyCode": false,
            "env": {"PYTHONPATH": "..:python"},
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "/home/agilmore/workspace/HDB/bashrc_hdb_app_local",
            "justMyCode": false,
            "args": " -l d -a ~/.app_user_login_service -n 5 -t",
        },

        {
            "type": "perl",
            "request": "launch",
            "name": "Perl-Debug Current File",
            "program": "${file}",
            "stopOnEntry": true,
            "reloadModules": true,
            "env": {
                "HDB_ENV": "${env:HDB_ENV}",
            },
            "args": "-a ~/.app_user_login_service -l u -n 1 -e 30-APR-2019 -dwt"
        },
        
    ]
}